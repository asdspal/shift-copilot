# ============================================
# ShiftCopilot Environment Configuration
# ============================================

# -------------------- General --------------------
NODE_ENV=development
LOG_LEVEL=info
DRY_RUN=false

# -------------------- Telegram Bot --------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# -------------------- Database --------------------
DATABASE_URL=postgresql://user:password@localhost:5432/shiftcopilot
DATABASE_POOL_SIZE=10

# -------------------- Blockchain (Base) --------------------
BASE_RPC_URL=https://mainnet.base.org
BASE_CHAIN_ID=8453
BUNDLER_URL=https://your-bundler-url.com
BUNDLER_API_KEY=your_bundler_api_key

# -------------------- Safe AA --------------------
SAFE_FACTORY_ADDRESS=0x...
SAFE_SINGLETON_ADDRESS=0x...
DEPLOYER_PRIVATE_KEY=0x...

# -------------------- SideShift --------------------
SIDESHIFT_API_URL=https://sideshift.ai/api/v2
SIDESHIFT_API_KEY=your_sideshift_api_key
SIDESHIFT_AFFILIATE_ID=your_affiliate_id

# -------------------- Polling Service --------------------
POLLING_INTERVAL_MS=5000
POLLING_MAX_DURATION_MS=180000

# -------------------- IPFS (Self-Hosted) --------------------
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# -------------------- Fixed USD Prices (Wave 1) --------------------
FIXED_PRICE_ETH_USD=2000
FIXED_PRICE_USDC_USD=1
FIXED_PRICE_USDT_USD=1

# -------------------- Policy Limits --------------------
DAILY_BUDGET_USD=100
PER_TX_CAP_USD=100
MIN_NATIVE_BALANCE_ETH=0.05
TARGET_NATIVE_BALANCE_ETH=0.08
SLIPPAGE_TOLERANCE_BPS=50

# -------------------- Gas Ghost --------------------
WATCHER_INTERVAL_MS=30000
FUNDING_PRIORITY=USDC,USDT,ETH

# -------------------- Security --------------------
JWT_SECRET=your_jwt_secret_here
SESSION_KEY_EXPIRY_HOURS=24

# -------------------- Observability --------------------
CIRCUIT_BREAKER_THRESHOLD=2
CIRCUIT_BREAKER_WINDOW_MS=600000
